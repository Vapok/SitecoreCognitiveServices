@model Sitecore.SharedSource.CognitiveServices.Models.Vision.ContentModerator.EvaluateResponse
@{
    ViewBag.Title = "Content Moderator - Evaluate";
    Layout = "~/Views/CognitiveLaunch/CognitiveLaunchLayout.cshtml";
}

<div class="frame">
    <form class="form spell-check-form" method="post" action="/CognitiveLaunchDemo/CognitiveLaunch/ContentModeratorEvaluate">
        <fieldset>
            <legend>Evaluate Image</legend>
            <div class="form-row">
                <label>provide an image url</label>
                <input type="text" name="url"/>
            </div>
            <div class="scWizardButtons">
                <input type="submit" value="Evaluate Image"/>
            </div>
            <br/>
            <div>
                <h2>Evaluate Image</h2>
                @if (Model != null)
                {
                    <h3>Result: @Model.Result</h3>
                    <hr/>
                    <div>
                        <div>Is Adult: @Model.IsImageAdultClassified</div>
                        <span>Adult Score: </span>
                        <span>
                            @Html.Partial("~/Views/CognitiveAnalysis/Common/MeasureBar.cshtml", (float) @Model.AdultClassificationScore)
                        </span>
                    </div>
                    <hr/>
                    <div>
                        <div>Is Racy: @Model.IsImageRacyClassified</div>
                        <span>Racy Score: </span>
                        <span>
                            @Html.Partial("~/Views/CognitiveAnalysis/Common/MeasureBar.cshtml", (float) @Model.RacyClassificationScore)
                        </span>
                    </div>
                }
            </div>
        </fieldset>
    </form>
</div>